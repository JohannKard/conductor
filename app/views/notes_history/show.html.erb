<div class="flex flex-col w-full p-4">
  <h1 class="text-3xl font-bold">Notes for <%= @date.strftime('%B %d, %Y') %></h1>

  <ul class="list-none py-6">
    <% @notes.each do |note| %>
      <li><%= note.content %></li>
    <% end %>
  </ul>
  <div>
    <%= link_to "Back to Notes History", notes_history_index_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>