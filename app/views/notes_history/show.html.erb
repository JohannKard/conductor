<h1 class="text-3xl font-bold mb-4">Notes for <%= @date.strftime('%B %d, %Y') %></h1>

<ul class="list-disc pl-4">
  <% @notes.each do |note| %>
    <li class="mb-2"><%= note.content %></li>
  <% end %>
</ul>

<%= link_to "Back to Notes History", notes_history_index_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>