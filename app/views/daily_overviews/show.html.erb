<h1 class="text-3xl font-bold mb-4">Daily Overview (<%= @date.strftime('%B %d, %Y') %>)</h1>

<div class="flex flex-row gap-4 p-4">
  <%= link_to "Habit Tracker", weeks_path(date: @date), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <%= link_to "Notes History", notes_history_path(id: ''), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>


<div class="flex flex-row gap-4 p-4">
  <%= link_to "Previous Day", daily_overview_path(id: (@date - 1).to_s), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% if @date != Date.today %>
    <%= link_to "Today", daily_overview_path(id: Date.today.to_s), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
  <%= link_to "Next Day", daily_overview_path(id: (@date + 1).to_s), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4">
  <div>
    <h2 class="text-xl font-bold mb-2">To-do List</h2>
    <%= render "todo_list" %>
  </div>

  <div>
    <h2 class="text-xl font-bold mb-2">Habit Tracker</h2>
    <%= render "habit_tracker" %>
  </div>
</div>

<div class="flex flex-col w-full px-4">
  <h2 class="text-xl font-bold mb-2">Notes</h2>
  <%= render "notes" %>
</div>