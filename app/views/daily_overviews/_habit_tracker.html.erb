<ul class="list-disc pl-4">
  <% @habits.each do |habit| %>
    <li class="flex items-center mb-2">
      <%= form_with(model: habit, url: habit_path(habit), method: :put, local: true) do |form| %>
        <%= form.check_box :completed, checked: habit.completed_for_date?(@date), class: "mr-2" %>
        <%= form.text_field :name, disabled: true, class: "w-full border border-gray-300 rounded-md p-2" %>
        <%= form.submit "Update", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded ml-2" %>
      <% end %>
    </li>
  <% end %>
</ul>