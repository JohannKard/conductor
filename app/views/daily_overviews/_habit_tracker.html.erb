<ul class="list-none">
  <% @habits.each do |habit| %>
    <li class="flex items-center mb-2">
      <% if !habit.habit_completions.completed.exists?(date: @date) %>
        <%= button_to habit_completion_path(habit), params: {:habit_completion => { :completed => 1 }, date: @date}, method: :patch, local: true do %>
          <i class="fa-classic fa-square text-xl"></i>
        <%end%>
      <% else %>
        <%= button_to habit_completion_path(habit), params: {:habit_completion => { :completed => 0 }, date: @date}, method: :patch, local: true do %>
          <i class="fa-solid fa-square-check text-xl text-green-500"></i>
        <%end%>
      <% end %>
      <span class="mx-3">
        <%= habit.name %>
      </span>
    </li>
  <% end %>
</ul>
<%= link_to "Habit Manager", weeks_path(date: @date), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>